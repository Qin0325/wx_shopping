@import '/assets/css/search.wxss';
.page{
  background-color: #fff;
}
.hot,.history{
  padding: 15rpx 25rpx;
  margin-bottom: 58rpx;
}
.hot::after{
  border-color: #f5f5f5;
}
.til{
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
}
.items {
  width: 500rpx;
}
.items view{
  margin-right: 30rpx;
  display: inline-block;
  margin-bottom: 30rpx;
}
.items navigator{
  display: inline-block;
  font-size: 28rpx;
  background-color: #f6f6f6;
  color: #363636;
  padding: 0 38rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 52rpx;
}
.history .more{
  text-align: center;
  color: #666666;
  /* display: flex;
  align-items: center; */
}
.history .more label{
  display: inline-block;
  position: relative;
  height: 19rpx;
  width: 24rpx;
  margin-left: 12rpx;
}
.history .more label::before{
  content: '';
  position: absolute;
  top: 5rpx;
  left: 0;
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top-color: #333;
  border-bottom-width: 0;
}
.history .more label::after{
  content: '';
  position: absolute;
  top: 1rpx;
  left: 0;
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top-color: #fff;
  border-bottom-width: 0;
}
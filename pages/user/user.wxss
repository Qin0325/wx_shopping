@import '/assets/css/sprites.wxss';
page {
  background: #f5f5f5;
}

.box {
  margin: 0 30rpx 30rpx 30rpx;
  background-color: #fff;
  border-radius: 22rpx;
  padding: 32rpx 30rpx;
}

.to-bg {
  background-color: #ff4964;
  height: 180rpx;
}

.user-list .icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.user-box {
  position: relative;
  top: -60rpx;
}

.user-box .info {
  text-align: center;
  padding: 100rpx 0 0 0;
}
.user-box .info button{
  font-size: 48rpx;
  margin-bottom: 20rpx;
  line-height: 1;
  color: #222;
  background-color: transparent;
  /* border: 1rpx solid red; */
}
.user-box .info button::after{
  /* border:1rpx solid red; */
  border:none;
}

.user-box .avatar {
  position: absolute;
  top: -95rpx;
  left: 50%;
  transform: translateX(-50%);
  border: 12rpx solid #fff;
  border-radius: 50%;
  overflow: hidden;
  background-color: #fff;
}

.user-box .avatar image {
  width: 170rpx;
  height: 170rpx;
  margin: 0 atuo;
}

.user-box .nickname {
  font-size: 48rpx;
  margin-bottom: 20rpx;
  line-height: 1;
  color: #222;
}

.user-box .user-id text {
  display: inline-block;
  width: 130rpx;
  height: 42rpx;
  line-height: 44rpx;
  border-radius: 44rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #ff4964;
}

.content .til {
  color: #4e4e4e;
  display: flex;
  align-items: center;
}

.cash-total {
  text-align: center;
  position: relative;
  margin-top: 60rpx;
}

.cash-total text {
  font-size: 62rpx;
  font-weight: bold;
}

.cash-total button {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  width: 128rpx;
  height: 46rxp;
  line-height: 46rpx;
  border-radius: 46rpx;
  border: 1rpx solid #ff4964;
  background-color: #fff;
  color: #4e4e4e;
  font-size: 28rpx;
}

.cash-items {
  margin: 50rpx -30rpx 0;
  display: flex;
  justify-content: space-between;
}

.cash-items view {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.cash-items view::after {
  content: '';
  position: absolute;
  right: 0;
  top: 15%;
  width: 4rpx;
  height: 70%;
  background-color: #ddd;
}

.cash-items view:last-child::after {
  display: none;
}

.cash-items .f-ava {
  font-size: 32rpx;
  color: #4e4e4e;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.content {
  position: relative;
  top: -60rpx;
}

.content image {
  width: 46rpx;
  height: 46rpx;
  margin-right: 16rpx;
}

.tj text {
  font-size: 28rpx;
}

.tj .sm {
  color: #999;
  font-size: 24rpx;
}

.user-list {
  padding: 0 30rpx;
  background: #fff;
  margin-top: 15rpx;
}

.user-list view {
  height: 84rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.user-list text {
  font-size: 28rpx;
}

.user-list .right {
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
}

.user-list .right::before {
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
  right: 0;
  border: 16rpx solid transparent;
  border-right-width: 0;
  border-left-color: #999;
}

.user-list .right::after {
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
  right: 4rpx;
  border: 16rpx solid transparent;
  border-right-width: 0;
  border-left-color: #fff;
}

.user-list navigator {
  background-color: #fff;
}

.team-til{
  font-weight: bold;
  color: #262626;
  margin: 33rpx 0 50rpx 0;
}
.people {
  display: flex;
  padding-bottom: 40rpx;
}
.people view {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.people view text{
  display: inline-block;
  color: #262626;
}
.people view .f-ava{
  margin-top: 25rpx;
  font-size: 30rpx;
  color: #4e4e4e;
  height: 42rpx;
  line-height: 42rpx;
}
.people view .f-ava text{
  margin-right: 50rpx;
}
.order .people{
  padding-bottom: 30rpx;
}
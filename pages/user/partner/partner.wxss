page{
  background-color: #f5f5f5;
}
.tab{
  display: flex;
  height: 100rpx;
  background-color: #fff;
}
.tab view{
  flex: 1;
  text-align: center;
}
.tab text{
  display: inline-block;
  width: 148rpx;
  height: 92rpx;
  line-height: 100rpx;
  color: #222;
  border-bottom: 8rpx solid #fff;
}
.tab .active text{
  border-bottom: 8rpx solid #ff4964;
  color: #ff4964;
}
.partner-msg{
  text-align: center;
  display: flex;
  flex-direction: column;
  margin: 48rpx 0;
  color: #222;
}

/* swiper */
.banner-swiper {
  /* width: 100%;
  overflow: hidden; */
  margin-bottom: 68rpx;
}

swiper {
  display: block;
  height: 670rpx;
  position: relative;
}

.slide-image {
  width: 480rpx;
  display: block;
  margin: 0 auto;
  height: 670rpx;
  transform: scale(0.75);
  transition: all .3s;
}
.banner-swiper .active{
  transform: scale(1);
}

.partner button{
  width: 378rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  margin: 0 auto;
  color: #fff;
  font-size: 30rpx;
  background-color: #ff4964;
}
.pop-wrap{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 8;
  visibility: hidden;
}
.open{
  visibility:visible;
}
.mask{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
}
.pop-share{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 445rpx;
  padding: 0 80rpx;
  background-color: #fff;
  transform: translate3d(0, 445rpx, 0);
  transition: all .3s;
}
.open .pop-share{
  transform: translate3d(0, 0, 0)
}
.pop-share .head{
  position: relative;
  text-align: center;
  height: 40rpx;
  margin: 56rpx 0 50rpx 0;
}
.pop-share .head::before{
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  height: 5rpx;
  background-color: #eaeaea;
}
.pop-share .head text{
  display: inline-block;
  background-color: #fff;
  padding: 0 56rpx;
  position: relative;
  color: #454545;
}
.share-to{
  display: flex;
  justify-content: space-around;
  padding-bottom: 40rpx;
  border-bottom: 5rpx solid #eaeaea;
}
.share-to label{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.share-to label:first-child{
  margin-right: 80rpx;
}
.share-to label:last-child{
  margin-left: 80rpx;
}
.pop-share image{
  width: 104rpx;
  height: 104rpx;
  margin-bottom: 18rpx;
}
.clear{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 5rpx;
}
.button-share{
  display: none;
}
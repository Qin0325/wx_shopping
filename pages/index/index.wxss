/**index.wxss**/
page{
  background: #f5f5f5;
}
.container{
  overflow: hidden;
}
.header{
  background: #ff4964;
}
.top-search{
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-input{
  height: 60rpx;
  width: 80%;
  background: #ffa4b2;
  border-radius: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.search-input icon{
  margin-right: 10rpx;
}
.nav{
  display: flex;
  padding: 20rpx 0;
}
.nav view{
  min-width: 130rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}
.nav view text{
  position: relative;
  display: inline-block;
}
.nav view text::after{
  content: '';
  position: absolute;
  width: 100%;
  height: 6rpx;
  bottom: -9rpx;
  left: 0;
  background-color: #ff4964;
}
.nav .active text::after{
  background-color: #fff;
  border-radius: 10rpx;
}
swiper{
  width: 750rpx;
  height: 375rpx;
}
swiper image{
  width: 750rpx;
  height: 375rpx;
}
.content{
  padding: 0 30rpx;
}
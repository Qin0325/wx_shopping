/* pages/cart/cart.wxss */
page, .cart{
  background-color: #eee;
}
.cart-list{
  background-color: #fff;
}
.item{
  padding: 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item-fl{
  display: flex;
  justify-content: start;
  align-items: center;
}
.item-fl label{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border:1rpx solid #ddd;
  border-radius: 4rpx;
  margin-right: 20rpx;
}

.item-fl checkbox{
  font-size: 20rpx;
  opacity: 0;
  position: relative;
  top: 25rpx;
  z-index: -1rpx;
}
.item-fl .name{
  display: inline-block;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 28rpx;
}
.img image{
  width: 80rpx;
  height: 80rpx;
}
.quantity{
  font-size: 28rpx;
  color: #999;
}
.price{
  font-size: 28rpx;
  color: #ff6700;
}